<Window x:Class="КР2семестр.MessageBoxNew"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:КР2семестр"
        mc:Ignorable="d"
        Title="MessageBoxNew" Height="150" Width="250" ResizeMode="NoResize"  WindowStyle="None"  Background="{x:Null}" BorderBrush="{x:Null}" AllowsTransparency="true" WindowStartupLocation="CenterScreen" >
   
           <Border CornerRadius="15" Background="White" Opacity="0.8" BorderBrush="Black" BorderThickness="2" >
             <StackPanel >
                  <TextBlock x:Name="MessageText" Text="Qweety" HorizontalAlignment="Center" Margin=" 0 30 0 0" FontFamily="Bauhaus 93" />
                  <Button x:Name="OKbutton" Background="LawnGreen" Width="60" Height="30" Margin=" 0 30 0 0" Content="OK" FontFamily="Bauhaus 93"  Click="OKbutton_Click"/>
             </StackPanel>
           </Border>
    
</Window>
